            android:name="ch.hsr.se2.kartenverwaltung.activities.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ch.hsr.se2.kartenverwaltung.activities.AddCardActivity"
            android:label="@string/title_activity_add_card" >
        </activity>
        <activity
            android:name="ch.hsr.se2.kartenverwaltung.activities.OverviewActivity"
            android:label="@string/title_activity_overview" >
        </activity>
        <activity
            android:name="ch.hsr.se2.kartenverwaltung.activities.CardViewActivity"
            android:label="@string/title_activity_card_list_item" >
        </activity>
        <activity
            android:name="ch.hsr.se2.kartenverwaltung.activities.CardDetailActivity"
            android:label="@string/title_activity_card_detail" >
        </activity>
        <activity
            android:name="ch.hsr.se2.kartenverwaltung.activities.VolleyTestActivity"
            android:label="@string/title_activity_card_detail" >
